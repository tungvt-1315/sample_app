<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to t("home"), root_path %>
        </li>
        <li>
          <%= link_to t("help"), "#" %>
        </li>
        <% if logged_in? %>
          <li><%= link_to t("users"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#" do %>
              <%= t "account" %>
              <b class="caret"></b>
            <% end %>
            <li><%= link_to t("profile"), current_user %></li>
            <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
            <li><%= link_to t("all_users"), users_path %></li>
            <li class="divider"></li>
            <li><%= button_to t("logout"), logout_path, method: :delete %></li>
          </li>
        <% else %> 
          <%= link_to t("login"), login_path %>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
