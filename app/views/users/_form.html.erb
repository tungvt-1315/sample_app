<%= form_for @user do |f| %>
  <%= render "shared/error_message" %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form_control" %>
  <%= f.label :email %>
  <%= f.email_field :email, class: "form_control" %>
  <%= f.label :password %>
  <%= f.password_field :password, class: "form_control" %>
  <%= f.label :password_confirmation, t("confirmation") %>
  <%= f.password_field :password_confirmation, class: "form_control" %>
  <br><br>
  <%= f.submit t("save_changes"), class: "btn btn-primary" %>
<% end %>